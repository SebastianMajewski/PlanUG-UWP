<UserControl
    x:Class="PlanVisual.Controls.NoSettingMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:planServiceReference="using:Plan.PlanServiceReference"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Name="OptionsForm"
    Background="{StaticResource PivotForegroundThemeBrush}">
    <Grid>
        <Rectangle Fill="#99000000"/>
        <StackPanel Height="300" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0">
            <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" Text="Musisz skonfigurować ustawienia."/>
            <Button Content="Konfiguruj" Command="{x:Bind ConfigureCommand}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
