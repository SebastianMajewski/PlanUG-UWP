<UserControl
    x:Class="PlanVisual.Controls.PlanGridTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="110">
    <Border BorderThickness="1" BorderBrush="#FF7A7A7A" Background="#66252525">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{x:Bind Classes.Subject}" HorizontalAlignment="Center"/>
            <TextBlock Text="{x:Bind Classes.Type.Name}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
