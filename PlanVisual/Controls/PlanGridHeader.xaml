<UserControl
    x:Class="PlanVisual.Controls.PlanGridHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Border MinWidth="110" Padding="10" BorderThickness="1" BorderBrush="#FF1F1F1F" Background="#FF404040">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{x:Bind Text}" Style="{StaticResource BaseTextBlockStyle}"/>
    </Border>
</UserControl>
